<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DV-Index</title>


    <!-- icons links -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer"
    />

    <!-- google-font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=PT+Serif&display=swap" rel="stylesheet">


    <!-- bootstrap links -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/styles.css">

</head>

<body>

    <section id="Nav-bar-section">
        <nav class="navbar navbar-expand-lg navbar-dark navbar-whole-class ">
            <div class="container">
                <p class="navbar-brand"><i class="fab fa-dyalog"></i><i class="fab fa-vuejs"></i> DeployVotes</p>
                <!-- makes the text right  -->
                <div class="w-25 text-right ">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                </div>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <!-- phone view - right  -->
                    <div class="navbar-nav mx-auto text-right">
                        <a href="/" class="nav-link nav-link-ltr textinnav ">Home</a>
                        <a href="/enroll" class="nav-link nav-link-ltr textinnav ">Enroll</a>
                        <a href="#" class="nav-link nav-link-ltr textinnav " id="active-underline">Login</a>
                        <a href="/Discussion" class="nav-link nav-link-ltr textinnav ">Discussion</a>
                        <h6 class="text-light my-auto">
                            <i class="fas fa-user-tie"></i>
                            <%= DisName %>
                        </h6>
                    </div>
                </div>
            </div>
        </nav>
    </section>


    <!-- Signup -->
    <section>

        <div id="login" class="login-whole">

            <div class="card-wrapper">
                <div class="card-body card fat container-fluid">
                    <div class="switch-form">
                        <div class="row">
                            <div id="signupBar" class="col-lg-6 col-md-6 col-sm-6 col-xs-6  switch-bar round-edge-lt white">
                                <h6 id="signupTxt" class="switch-text text-decoration-underline" onclick=signup()>Sign up</h6>
                            </div>
                            <div id="loginBar" class="col-lg-6 col-md-6 col-sm-6 col-xs-6 round-edge switch-bar  round-edge-rt">
                                <h6 id="loginTxt" class="switch-text" onclick=login()>Login</h6>
                            </div>
                        </div>
                    </div>

                    <% if(message == "Successfully Signed up!") {%>
                        <div class="popup" id="popupmsgSus">
                            <button type="button" class="btn btn-success btn-block message_btn" onclick="messageHide()">
                                <div class="text-right">
                                    <i class="far fa-times-circle text-light float-right"></i>
                                </div>
                                Successfully Registered!
                            </button>
                        </div>
                        <% } %>

                            <% if(message == "User-Id already Exist!" || message == "Invalid UserId" || message == "Incorrect Password!") {%>
                                <div class="popup" id="popupmsgFail">
                                    <button type="button" class="btn btn-danger btn-block message_btn" onclick="messageHide()">
                                <div class="text-right">
                                    <i class="far fa-times-circle text-light float-right"></i>
                                </div>
                                        <%= message %>
                                    </button>
                                </div>

                                <% } %>

                                    <!-- signupForm -->
                                    <div id="signupForm">
                                        <form action="/signup" method="POST" class="my-login-validation">
                                            <div class="form-group formTopCls">
                                                <label for="name">Name</label>
                                                <input type="text" class="form-control" name="name" required autofocus>
                                            </div>

                                            <div class="form-group">
                                                <label for="email">User ID</label>
                                                <input type="text" class="form-control" name="email" required>
                                            </div>

                                            <div class="form-group">
                                                <label for="password">Password</label>
                                                <input type="password" class="form-control" name="password" required data-eye>
                                            </div>

                                            <div class="form-group">
                                                <label for="ph">Phone No.</label>
                                                <input type="number" class="form-control" name="phonenumber" required data-eye>
                                            </div>

                                            <div class="form-group">
                                                <div class="custom-checkbox custom-control">
                                                    <input type="checkbox" name="agree" id="agree" class="custom-control-input" required="">
                                                    <label for="agree" class="custom-control-label">I agree to the <a href="#">Terms and Conditions</a></label>
                                                </div>
                                            </div>

                                            <div class="form-group m-0">
                                                <button type="submit" class="btn btn-primary btn-block btn-index">
                                    Submit
                                </button>
                                            </div>
                                            <div class="mt-4 text-center">
                                                Already have an account? <a href="#">Login</a>
                                            </div>
                                        </form>

                                    </div>

                                    <!-- loginForm -->
                                    <div id="loginForm" class="deactive">
                                        <form action="/login" method="POST" class="my-login-validation" novalidate="">

                                            <div class="form-group formTopCls">
                                                <label for="email">User ID</label>
                                                <input type="text" class="form-control" name="email" required>
                                            </div>

                                            <div class="form-group">
                                                <label for="password">Password</label>
                                                <input type="password" class="form-control" name="password" required data-eye>
                                            </div>

                                            <div class="form-group m-0">
                                                <button type="submit" class="btn btn-primary btn-block btn-index">
                                    Login
                                </button>
                                            </div>
                                        </form>

                                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- jquery  -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="animation.js"></script>
</body>

</html>