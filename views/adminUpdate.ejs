<body class="adminBody">
    <!-- navbar -->
    <section id="Nav-bar-section">
        <nav class="navbar navbar-expand-lg navbar-dark navbar-whole-classAdmin ">
            <div class="container">
                <p class="navbar-brand"><i class="fab fa-dyalog"></i><i class="fab fa-vuejs"></i> DeployVotes</p>
                <p class="text-light fw-bold"><u>Admin</u></p>
                <!-- makes the text right  -->
                <div class="w-25 text-right ">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <!-- phone view - right  -->
                    <div class="navbar-nav mx-auto text-right">
                        <a href="adminLogin" class="nav-link nav-link-ltr textinnavAdmin ">Login</a>
                        <a href="adminDetails" class="nav-link nav-link-ltr textinnavAdmin ">View Details</a>
                        <a href="adminUpdate" class="nav-link nav-link-ltr textinnavAdmin " id="active-underline">update</a>
                        <h6 class="text-light my-auto text-center">
                            <i class="fas fa-user-tie"></i>
                            <p> ... </p>
                        </h6>
                    </div>
                </div>
            </div>
        </nav>
    </section>


    <section>

        <!-- MenuBar Icon -->
        <div class="text-center ">
            <button class="button-30 text-light bg-danger" type="button" data-toggle="modal" data-target="#signin-Modal"> Existing Dates</button>
        </div>

        <div class="logOutBTN">
            <button type="button" class="btn btn-outline-dark">Log Out</button>
        </div>

        <form action="/adminDateCheck" method="post">
            <div class="adminLoginBox ">
                <h3 class="welcomeAdmin">
                </h3>
                <!-- error -->

                <% if(err == "Enter the Valid Date!"){%>
                    <div class="errorDiv">
                        <div class="alert alert-danger bg-danger text-light text-center alert-dismissible">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
                            <strong><%= err%></strong>
                        </div>
                    </div>
                    <% } else if(err == "Successfully Updated!"){%>
                        <div class="errorDiv">
                            <div class="alert alert-success bg-success text-light text-center alert-dismissible">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
                                <strong><%= err%></strong>
                            </div>
                        </div>
                        <% } %>

                            <div class="login__field">
                                <p class="adminUpdateInp"> <i class="login__icon fas fa-hourglass-start"></i> Start Date:
                                    <input type="date" class="login__input" name="votingStart" required></p>
                            </div>
                            <div class="login__field">
                                <p class="adminUpdateInp"> <i class="login__icon fas fa-hourglass-end"></i> Voting End Date:
                                    <input type="date" class="login__input" name="votingEnd" required></p>
                            </div>
                            <div class="login__field">
                                <p class="adminUpdateInp"> <i class="login__icon fas fa-hourglass-end"></i> Enrollment End Date:
                                    <input type="date" class="login__input" name="enrollEnd" required></p>
                            </div>

                            <div class="adminBtn">
                                <button type="submit" class="btn btn-danger">update</button>
                            </div>
            </div>
        </form>
    </section>


    <div class="text-center">
        <form action="/changeToday" method="post">

            <% if(err == "Today's Date Changed!"){%>
                <div class="errorDiv">
                    <div class="alert alert-success bg-success text-light text-center alert-dismissible">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
                        <strong><%= err%></strong>
                    </div>
                </div>
                <% } %>

                    <div class="login__field">
                        <p class="adminUpdateInp"> <i class="login__icon fas fa-exchange-alt"></i> Change Today Date:
                            <input type="date" class="login__input" name="today" required></p>
                    </div>
                    <div class="adminBtn mb-5">
                        <button type="submit" class="btn btn-danger">Change</button>
                    </div>
        </form>
    </div>


    <!-- Existing Date -->
    <article>
        <div class="modal fade" id="signin-Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <!-- Close -->
                    <div class="modal-header border-bottom-0">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                                </button>
                    </div>

                    <!-- Context -->
                    <div class="modal-body text-center">
                        <h2>Exiting Date</h2>
                        <div class="exitingDate text-center">
                            <p>
                                <b class="text-decoration-underline">
                                    Today's Date:
                                </b>
                                <%= today %>.
                            </p>
                            <p>
                                <b>
                                    Voting Start Date:
                                </b>
                                <%= VStart %>.
                            </p>
                            <p>
                                <b>
                                    Voting End Date:
                                </b>
                                <%= VEnd %>.
                            </p>
                            <p>
                                <b>
                                    Enrollment End Date:
                                </b>
                                <%= EEnd%>.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
    </article>

